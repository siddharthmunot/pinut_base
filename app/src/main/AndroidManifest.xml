<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wiflick.wiflickhome" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Pinut" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".Intro"
            android:label="Pinut"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".moviesView"
            android:label="Movies" >
        </activity>
        <activity
            android:name=".foodView"
            android:label="Food" >
        </activity>
        <activity
            android:name=".dlna.DlnaView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".dlna.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>

        <service android:name="org.fourthline.cling.android.AndroidUpnpServiceImpl" />
        <!-- Kore -->
        <activity
            android:name=".kore.ui.RemoteActivity"
            android:label="Remote" >

            <!-- Intent filter for sharing from youtube player -->
            <intent-filter android:label="@string/play_on_kodi" >
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>

            <!-- Intent filter for sharing youtube URLs -->
            <intent-filter android:label="@string/play_on_kodi" >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="youtube.com"
                    android:scheme="http" />
                <data
                    android:host="m.youtube.com"
                    android:scheme="http" />
                <data
                    android:host="www.youtube.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".kore.ui.hosts.HostManagerActivity" />
        <activity android:name=".kore.ui.hosts.AddHostActivity" />
        <activity android:name=".kore.ui.hosts.EditHostActivity" />
        <activity android:name=".kore.ui.MoviesActivity" />
        <activity android:name=".kore.ui.TVShowsActivity" />
        <activity android:name=".kore.ui.MusicActivity" />
        <activity android:name=".kore.ui.AddonsActivity" />
        <activity android:name=".kore.ui.SettingsActivity" />
        <activity android:name=".kore.ui.FileActivity" />
        <activity android:name=".kore.ui.PVRActivity" />
        <activity android:name=".kore.ui.AllCastActivity" />

        <!-- Providers -->
        <provider
            android:name=".kore.provider.MediaProvider"
            android:authorities="org.wiflick.wiflickhome.kore.provider"
            android:exported="false" />

        <!-- Services -->
        <service
            android:name=".kore.service.LibrarySyncService"
            android:exported="false" />
        <service
            android:name=".kore.service.NotificationService"
            android:exported="false" />
        <service
            android:name=".kore.service.IntentActionsService"
            android:exported="false" />

        <uses-library
            android:name="com.sec.android.app.multiwindow"
            android:required="false" />

        <meta-data
            android:name="com.sec.android.support.multiwindow"
            android:value="true" />
        <meta-data
            android:name="com.sec.android.multiwindow.DEFAULT_SIZE_W"
            android:value="632.0dip" />
        <meta-data
            android:name="com.sec.android.multiwindow.DEFAULT_SIZE_H"
            android:value="598.0dip" />
        <meta-data
            android:name="com.sec.android.multiwindow.MINIMUM_SIZE_W"
            android:value="632.0dip" />
        <meta-data
            android:name="com.sec.android.multiwindow.MINIMUM_SIZE_H"
            android:value="598.0dip" />

        <activity
            android:name=".MainActivityNew"
            android:label="@string/title_activity_main_activity_new" >
        </activity>
        <activity
            android:name=".AutoConnectActivity"
            android:label="@string/title_activity_auto_connect" >
        </activity>
        <activity
            android:name=".ServerDiscoveryActivity"
            android:label="@string/title_activity_server_discovery" >
        </activity>
        <receiver
            android:name=".WiFiConnectionListener"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
